<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}oms.log}"/>
    <property name="LOG_FILE_MAX_SIZE" value="${LOG_FILE_MAX_SIZE:-100MB}"/>
    <property name="LOG_FILE_MAX_HISTORY" value="${LOG_FILE_MAX_HISTORY:-10}"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %X{correlationId:-NONE} - %msg%n"/>

    <!-- ===== DEV PROFILE ===== -->
    <springProfile name="dev">
        <!-- Console appender with pattern layout for readability -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="com.jaypal" level="DEBUG"/>
        <logger name="org.springframework.security" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>

    <!-- ===== PROD PROFILE ===== -->
    <springProfile name="prod">
        <!-- JSON structured logging to file with correlation ID -->
        <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE}</file>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"service":"oms","environment":"production"}</customFields>
                <includeContext>true</includeContext>
                <includeMdcKeyName>correlationId</includeMdcKeyName>
                <timeZone>UTC</timeZone>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}oms-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>${LOG_FILE_MAX_SIZE}</maxFileSize>
                <maxHistory>${LOG_FILE_MAX_HISTORY}</maxHistory>
            </rollingPolicy>
        </appender>

        <!-- Async appender for performance -->
        <appender name="ASYNC_JSON" class="ch.qos.logback.classic.AsyncAppender">
            <queueSize>512</queueSize>
            <discardingThreshold>0</discardingThreshold>
            <appender-ref ref="JSON_FILE"/>
        </appender>

        <!-- Console JSON appender -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"service":"oms"}</customFields>
                <includeContext>true</includeContext>
                <includeMdcKeyName>correlationId</includeMdcKeyName>
            </encoder>
        </appender>

        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_JSON"/>
        </root>

        <logger name="com.jaypal" level="INFO"/>
    </springProfile>

    <!-- ===== COMMON CONFIGURATION ===== -->
    <!-- Suppress verbose logging from third-party libraries -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot.actuate" level="INFO"/>
    <logger name="org.springframework.security.oauth2" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.engine.transaction.internal.TransactionImpl" level="DEBUG"/>
    <logger name="io.github.resilience4j" level="INFO"/>

</configuration>
